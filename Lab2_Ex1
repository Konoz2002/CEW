//Exercise 1

#include <stdio.h>
void main(){
int n;
int num =-1;
int sum=0;
scanf("%d", &n);
for (int i=0; i<n; i++)
{
    num=num+2;
    sum=sum+num;
    printf("%d\n",num);
}
printf("sum = %d\n",sum);
}


#include <stdio.h>
void main(){
int n;
int num =-1;
int sum=0;
scanf("%d", &n);
int i=0;
while (i<n)
{
    num=num+2;
    sum=sum+num;
    printf("%d\n",num);
    i++;
}
printf("sum = %d\n",sum);
}


#include <stdio.h>
void main(){
int n;
int num =-1;
int sum=0;
scanf("%d", &n);
int i=0;
do
{
    num=num+2;
    sum=sum+num;
    printf("%d\n",num);
    i++;
}while(i<n);
printf("sum = %d\n",sum);
}
